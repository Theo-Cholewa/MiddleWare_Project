<configuration>
  <system.serviceModel>
    <services>
      <service name="RouterServer.RoutingServer">
        <!-- Endpoint SOAP standard (peut être laissé pour l'utilisation interne) -->
        <endpoint address="" 
                  binding="wsHttpBinding" 
                  contract="RouterServer.IRoutingServer" />
        
        <!-- Endpoint WebHTTP pour exposer l'API RESTful -->
        <endpoint address="" 
                  binding="webHttpBinding" 
                  contract="RouterServer.IRoutingServer" 
                  behaviorConfiguration="webBehavior" />
      </service>
    </services>

    <behaviors>
      <serviceBehaviors>
        <behavior>
          <!-- Activer l'exportation des métadonnées -->
          <serviceMetadata httpGetEnabled="true" />
        </behavior>
      </serviceBehaviors>

      <endpointBehaviors>
        <behavior name="webBehavior">
          <!-- Comportement pour l'API Web (REST) -->
          <webHttp />
        </behavior>
      </endpointBehaviors>
    </behaviors>

    <bindings>
      <webHttpBinding>
        <binding name="webHttpBinding" />
      </webHttpBinding>
    </bindings>
  </system.serviceModel>
</configuration>
